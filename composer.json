{
    "name": "nekofar/pest-plugin-slim",
    "description": "The Pest Slim Plugin",
    "keywords": [
        "php",
        "framework",
        "pest",
        "unit",
        "test",
        "testing",
        "plugin",
        "slim"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "pestphp/pest": "^1.0",
        "pestphp/pest-plugin": "^1.0",
        "selective/test-traits": "^1.1"
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "dev-master",
        "php-di/slim-bridge": "^3.1",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.8"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Pest\\Slim\\": "src/"
        },
        "files": [
            "src/Autoload.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Pest\\Slim\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ],
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always"
    }
}
